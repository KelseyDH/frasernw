%table
  -Specialization.all.each do |specialization|
    %tr
      %th= specialization.name
      %th
      %th
      %th

    - specialization.clinics.each do |clinic|
      %tr
        %td= "#{clinic.name}"
        %td= link_to 'Show', clinic_path(clinic)
        %td= link_to 'Edit', edit_clinic_path(clinic)
        %td= link_to 'Delete', clinic, :confirm => "Delete #{clinic.name}?", :method => :delete
        
    %tr
      %td= link_to "New Clinic in #{specialization.name}", new_clinic_path
      %td
      %td
      %td

