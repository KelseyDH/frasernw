/ - title "Specialization"

%h1= @specialization.name

%h3 Specialists

%table{:class => 'grid', :id => 'specialist_table'}
  %tr
    %th Name
    %th Wait (weeks)
    %th City
    %th Interests/Expertise
    %th Area of practice
  - @specialization.specialists.each do |specialist|
    %tr
      %td= link_to "#{specialist.firstname} #{specialist.lastname}", specialist_path(specialist)
      %td= link_to "#{specialist.waittime}"
      %td= link_to "#{specialist.city}"
      %td= link_to "#{specialist.interest}"
      %td= specialists_procedures(specialist)
      
%h3 Area of practice
%ul
  - @specialization.procedures.each do |procedure|
    %li= link_to listed_procedure(procedure), procedure_path(procedure)

%p
  = link_to "New specialist", new_specialization_specialist_path(@specialization)
  |
  = link_to "New procedure", new_procedure_path

%p
  = link_to "Edit", edit_specialization_path(@specialization)
  |
  = link_to "Destroy", @specialization, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", specializations_path
