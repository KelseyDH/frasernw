%h2 Specialists

%table.table.table-condensed
  -Specialization.all.each do |specialization|
    %tr{ :class => specialization.in_progress ? "in-progress" : "" } 
      %th=specialization.name
      %th.admin
      
    - specialization.specialists.each do |specialist|
      %tr
        %td= link_to specialist.name, specialist_path(specialist)
        %td.admin.btn-group
          = link_to("<i class='icon-pencil'></i>".html_safe + " Edit", edit_specialist_path(specialist), :class => "btn btn-small")
          = link_to("<i class='icon-trash'></i>".html_safe + " Delete", specialist, :confirm => "Delete #{specialist.name}?", :method => :delete, :class => "btn btn-small")
      
    %tr
      %th
      %th.admin=link_to( "<i class='icon-plus-sign'></i>".html_safe + " New Specialist in #{specialization.name}", new_specialization_specialist_path(specialization), :class => "btn btn-small")

