= form_for @user do |f|
  - if not f.error_messages.blank?
    .alert.alert-error= f.error_messages
  .row
    = f.label :username, :class => "span3"
    = f.text_field :username, :class => "span5"
  .row
    = f.label :name, :class => "span3"
    = f.text_field :name, :class => "span5"
  .row
    = f.label :email, "Email Address", :class => "span3"
    = f.text_field :email, :class => "span5"
  .row
    = f.label :password, :class => "span3"
    = f.password_field :password, :class => "span5"
  .row
    = f.label :password_confirmation, "Confirm Password", :class => "span3"
    = f.password_field :password_confirmation, :class => "span5"
  .row
    = f.label :role, :class => "span3"
    = f.select :role, ['user', 'admin'], :class => "span5"
  .row
    = f.label :nofity, "email notifications (only if admin)", :class => "span3"
    = f.check_box :notify, :class => "span5"
  .row
    = f.submit (@user.new_record? ? "Sign up" : "Update")
