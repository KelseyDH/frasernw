def add_procedure_specialization(ps, children)
    procedure_node = Array.new
    procedure_node[0] = ps.procedure.name
    procedure_node[1] = url_for(ps.procedure) #.gsub!(/^\//, '')    
    procedure_node[2] = ""
    procedure_node[3] = Array.new
    children.each do |child_ps, child_children|
        next if not child_ps.procedure.specialization_level
        procedure_node[3] << add_procedure_specialization(child_ps, child_children)
    end
    return procedure_node
end

