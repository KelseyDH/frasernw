- set_page_specific_title "#{@evidence.level}"

.content-wrapper
  .content
    %h2
      = @evidence.level
      %small
        (Level of Evidence)


    %p.no_indent.space
      %strong Level:
      = @evidence.level

    %p.no_indent.space
      %strong Description:
      - if @evidence.description.blank?
        = " - "
      = @evidence.description

    %br

  - if @evidence.sc_items.present?

    %table.table.table-condensed.table-striped
      %tr
        %th Content with this Level of Evidence
        %th Category
        %th Parent Category

      - @evidence.sc_items.each do |sc_item|
        %tr
          %td= link_to sc_item.name, sc_item_path(sc_item.id)
          %td= sc_item.sc_category.name
          %td= link_to sc_item.root_category.name, sc_item.root_category


  %p.no_indent.space
    = link_to "Back to all Levels of Evidence", evidences_path
  %p.admin.btn-group
    - if can? :update, @evidence
      = link_to("<i class='icon-pencil'></i>".html_safe + " Edit Level of Evidence", edit_evidence_path(@evidence), :class => "btn ajax")
    - if can? :view_history, @evidence
      = large_history_button(@evidence)
