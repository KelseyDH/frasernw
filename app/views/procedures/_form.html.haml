= simple_form_for @procedure do |f|
  = f.error_messages
  %p
    = f.label :name
    = f.text_field :name
  %p
    = f.label :parent_id
    = f.select :parent_id, @procedure_ancestry
  %p
    = f.input :specialization_level, as: :radio, :collection => [ ['Specialization', true], ['Physician', false] ] 
    = f.hidden_field :specialization_id
  %p
    = f.submit
