!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/

    /[if lte IE 9]
      =stylesheet_link_tag 'application-ie'

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)

  %body{:id => "#{params[:controller]}_page"}
    #header_wrapper
      #header
        #logo
          = link_to "Pathways", root_url
          -#= link_to image_tag('/images/logo.png'), root_url
        #nav
          - if logged_in?
            = link_to "Logout", logout_url
      -#
        - if logged_in? and current_user.admin?
          #admin
            /= link_to "Track Specialists", tracker_path
            = link_to "Activity", all_versions_path
            = link_to "Review Queue (#{Review.count})", reviews_path
            = link_to "Users", users_path
            = link_to "Specialities", specializations_path
            = link_to "Specialists", specialists_path
            = link_to "Clinics", clinics_path
            = link_to "Hospitals", hospitals_path
            = link_to "Areas of Practice", procedures_path
            = link_to "Healthcare Providers", healthcare_providers_path
            = link_to "Languages", languages_path
            = link_to "Cities", cities_path

    #content_wrapper
      - unless params[:controller] == 'user_sessions'
        %iframe#searchbox{:src => "/navigation"}

      #content{:class => "container_#{params[:controller]}"}
        - flash.each do |name, msg|
          = content_tag :div, raw(msg), :id => "flash_#{name}"
        - if show_title?
          %h1= yield(:title)
        = yield
