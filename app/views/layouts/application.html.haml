!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/

    /[if lte IE 9]
      =stylesheet_link_tag 'application-ie'

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)

  %body{:id => "#{params[:controller]}_page"}
    .container
      #header.row
        #nav.twelvecol.last
          - if logged_in? and current_user.admin?
            /= link_to "Track Specialists", tracker_path, class: "left button"
            = link_to "Activity", all_versions_path, class: "left button"
            = link_to "Review Queue (#{Review.count})", reviews_path, class: 'middle button'
            = link_to "Users", users_path, class: "middle button"
            = link_to "Specialities", specializations_path, class: "middle button"
            = link_to "Specialists", specialists_path, class: "middle button"
            = link_to "Clinics", clinics_path, class: "middle button"
            = link_to "Hospitals", hospitals_path, class: "middle button"
            = link_to "Areas of Practice", procedures_path, class: "middle button"
            = link_to "Healthcare Providers", healthcare_providers_path, class: "middle button"
            = link_to "Languages", languages_path, class: "middle button"
            = link_to "Cities", cities_path, class: "middle button"
          - if logged_in?
            = link_to "Home", root_url, class: "middle button"
            = link_to "Logout", logout_url, class: "right button"

      #content.row
        - unless params[:controller] == 'user_sessions'
          %iframe.threecol{:src => "/searchbox.html", :id => 'searchbox'}

        #container.ninecol.last{:class => "container_#{params[:controller]}"}
          %div{:style => "margin-bottom: 5px; float: right;"} 

          - flash.each do |name, msg|
            = content_tag :div, raw(msg), :id => "flash_#{name}"
          - if show_title?
            %h1= yield(:title)
          = yield
