!!!
%html
  %head
    %title= yield(:title) ? "Pathways | #{yield(:title)}" : "Pathways"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{"name"=>"viewport", :content=>"initial-scale=1.0"}

    = stylesheet_link_tag "patient_information", :media => 'screen, print'
    = javascript_include_tag "jquery-1.7.1.min.js"

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32752873-1']);
      _gaq.push(['_trackPageview']);
      _gaq.push(['_setCustomVar', 1, 'ID', '#{current_user_id}', 1]);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      
    = csrf_meta_tag
    = yield(:head)

  %body
    = yield
