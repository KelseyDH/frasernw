= simple_form_for(@subscription, :html => {:class => 'form-horizontal'}, :wrapper_mappings => { check_boxes: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean  }, label: :none) do |f|
  = f.error_notification

  .form-inputs
    %h2
      Update Notification type:
    = f.input :classification,  as: :radio_buttons, collection: classification_options, label_method: :last, value_method: :first, include_blank: false, label: "Pick the update type:"
    

    = f.input :user_id, collection: current_user.id, as: :hidden

    %h2 
      Divisions to receive updates from:
    = f.association :divisions, as: :check_boxes, collection: Division.all, label_method: :name, value_method: :id, presence: true, required: true, label: "Select a division"
    = simple_fields_for :subscription_news_item_types do |n|
      = n.input :news_item_type, as: :check_boxes, collection: NewsItem::TYPE_HASH, label_method: :last, value_method: :first, label: false, label: "pick news item types"

      = n.input :type_mask, as: :select, collection: ScItem::TYPE_HASH, label_method: :last, value_method: :first, :include_blank => false

    %h2
      Receive News Updates on these topics:
    = f.input :news_type, :as => :check_boxes, :collection => news_type_options, label_method: :last, value_method: :first, :include_blank => false, label: false

    %h2
      Notify me when the following Resources change:
    = f.input :item_type, collection: ScCategory.all, as: :check_boxes, label: false

    %h2 
      Notify me of Updates to the following Specializations:  
    = f.association :specializations, collection: Specialization.all, label_method: :name, value_method: :id, as: :check_boxes, presence: true, required: true, label: "Notify me about:" 

    %h2 
      Receive Updates How Often?:
    = f.input :interval, collection: interval_options, as: :radio_buttons, label: false, required: :true


  .form-actions
    = f.button :submit
