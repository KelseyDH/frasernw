= simple_form_for(@subscription, :html => {:class => 'form-horizontal'}, :wrapper_mappings => { check_boxes: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean  }, label: :none) do |f|
  = f.error_notification

  .form-inputs
    %h2
      Update Notification type:
    = f.input :classification,  as: :radio_buttons, collection: classification_options, label_method: :last, value_method: :last, include_blank: false, label: "Pick the update type:"

    = f.input :user_id, as: :hidden

    %h2
      Divisions to receive updates from:
    = f.association :divisions, collection: Division.all, label_method: :name, as: :check_boxes, label: "Select a division"

    %h2
      Receive News Updates on these topics:
    = f.input :news_type, :as => :check_boxes, :collection => NewsItem.type_hash_as_array, label_method: :last, value_method: :first, :include_blank => false

    %h2
      Notify me when the following Physician Resources change:
    = f.association :sc_categories, as: :check_boxes, collection: ScCategory.all, label_method: :name, value_method: :id, presence: true, label: "Content categories:"

    %h2
      Notify me of Resource Updates to the following Specializations:
    = f.association :specializations, collection: Specialization.all, label_method: :name, value_method: :id, as: :check_boxes, presence: true, required: true, label: "Notify me about:"

    %h2
      Receive Updates How Often?:
    = f.input :interval, collection: Subscription::INTERVAL_HASH, as: :radio_buttons, label: false, required: :true, label_method: :last, value_method: :first


  .form-actions
    = f.button :submit
