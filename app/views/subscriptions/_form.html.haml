= simple_form_for(@subscription, :html => {:class => 'form-horizontal'}, :wrapper_mappings => { check_boxes: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean  }, label: :none) do |f|
  = f.error_notification

  .form-inputs
    %h2
      Subscribe to a Custom Notification for:
    = f.input :classification,  as: :radio_buttons, collection: classification_options, label_method: :last, value_method: :last, include_blank: false, label: "Pick an update type:"

    -# Form Notes:
      -# .all-updates = form options relevant to all subscription types
      -# .news-updates = form options for news_update classifiation
      -# .resource-updates = form options for resource_update classification


    = f.input :user_id, as: :hidden
    .news-updates
      %hr
      .alert.alert-info
        %h2
          Receive News Updates on these topics:
        = f.input :news_type, :as => :check_boxes, :collection => NewsItem.type_hash_as_array, label_method: :last, value_method: :first, :include_blank => false

    .news-updates
      %hr
      %h2
        Notify me when the following Content Item change:
      = f.association :sc_categories, as: :check_boxes, collection: ScCategory.all_parents, label_method: :name, value_method: :id, presence: true, label: "Content categories:"

    .resource-updates
      %hr
      .alert.alert-info
        #container
          %h2
            Notify me when Resources are updated in the following Specialties:
          = f.input :all_specializations, label: "All Specializations", as: :fake_string, input_html: { value: nil, type: "checkbox"}
          = f.association :specializations, collection: Specialization.all, label_method: :name, value_method: :id, as: :check_boxes, presence: true, required: true, label: "Notify me specifically about:"
    %hr
    .all-updates
      %h2
        Notify me of updates to the following Divisions:
      = f.association :divisions, collection: Division.all, label_method: :name, as: :check_boxes, label: "Select a division"
      %hr
      .alert.alert-info
        %h2
          Receive Updates How Often?:
        = f.input :interval, collection: Subscription::INTERVAL_HASH, as: :radio_buttons, label: false, required: :true, label_method: :last, value_method: :first
      .form-actions
        = f.button :submit, :class => "btn btn-primary"
        = link_to 'Cancel', users_path, :class => "btn btn-danger ajax"

