<% cache("livesearch_all_entries") do

  search_data = Array.new

  order_map = {
    "Specializations" => "1",
    "Specialists" => "2",
    "Clinics" => "3",
    "Content" => "4",
    "Procedures" => "5",
    "Hospitals" => "6",
    "Languages" => "7"
  }

  ScCategory.all.each do |category|
    order_map[ category.name ] = ( order_map.length + 1 ).to_s
  end

  specialists = Specialist.includes(:specialist_specializations => :specialization, :specialist_offices => { :office => { :location => [{:address => :city}, {:hospital_in => {:location => { :address => :city}}}, {:location_in => [{:address => :city}, {:hospital_in => {:location => { :address => :city}}}]}]}})

  specialists.reject{ |s| s.in_progress_for_divisions(s.divisions) }.each do |specialist|

    #this handles those that only belong to specializations that are "in progress", as well as orphaned entities
    
    entry = { 
      "n" => specialist.billing_number_padded ? specialist.name + " - MSP #" + specialist.billing_number_padded: specialist.name, 
      "sp" => specialist.specializations.not_in_progress_for_divisions(specialist.divisions).uniq.map{ |s| s.id },
      "c" => specialist.cities_for_display.map{ |city| city.id },
      "st" => specialist.status_class_hash,
      "id" => specialist.id,
      "go" => order_map["Specialists"] }
    search_data << entry
  end

  clinics = Clinic.includes(:locations => [{:address => :city}, {:hospital_in => {:location => { :address => :city}}}])

  clinics.reject{ |c| c.in_progress_for_divisions(c.divisions) }.each do |clinic|

    #this handles those that only belong to specializations that are "in progress", as well as orphaned entities
    
    entry = { 
      "n" => clinic.name, 
      "sp" => clinic.specializations.not_in_progress_for_divisions(clinic.divisions).uniq.map{ |c| c.id },
      "c" => clinic.cities.map{ |city| city.id },
      "st" => clinic.status_class_hash,
      "id" => clinic.id,
      "go" => order_map["Clinics"] }
    search_data << entry
  end

  -%>
  var pathways_all_search_data = <%=search_data.to_json.html_safe %>

<% end -%>
